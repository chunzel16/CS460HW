@model IEnumerable<Homework6.Models.Person>

@{
    ViewBag.Title = "Index";
}

<h2 id="title">Client Search</h2>
@using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group">
        <div class="input-group">

            @Html.TextBox("input", "", new { @class = "form-control", @placeholder = "Enter A Client Name", required = "required" })
            <span class="input-group-btn">
                <button class="btn btn-default " type="submit"><span class="glyphicon glyphicon-search"></span></button>
            </span>

        </div>
    </div>
}
    @if (ViewBag.show)
    {
        
        if (Model.Count() == 0)
        {
            <h4>I'm sorry, your search returned no results</h4>

        }
        else
        {
            <div>
                <h4>Client Name:</h4>
            </div>
            <br />
            foreach (var searchResult in Model)
            {
                <div>


                    <a class="btn btn-primary btn-md btn-block" href="Home/Details/@searchResult.PersonID" role="button"> @searchResult.FullName (@searchResult.PreferredName) </a>
                </div>
            }
        }
    }
   