@model IEnumerable<Homework8.Models.Bid>
@{
    ViewBag.Title = "Home";
}

<h2>REGINALD'S ANCIENT ANTIQUITIES AUCTION HOUSE</h2>

<div class="row">
    <div class="col-md-4">
        <h2>View Items</h2>
        <p>
            There is a list of items which are on the auction
        </p>
        @Html.ActionLink("View Items", "Index", "Auction", null, new { @class = "btn btn-primary btn-large" })
    </div>
    <div class="col-md-4">
        <h2>Go Creating A Bid</h2>
        <p>Let's create a bid</p>
        @Html.ActionLink("create", "BidCreate", "Auction", null, new { @class = "btn btn-primary btn-large" })
    </div>
</div>
<br />
<br />
<br />
<div class="container">
    <h2>Current Bid for Items</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Item ID")
            </th>
            <th>
                @Html.DisplayName("Bidder Name")
            </th>
            <th>
                @Html.DisplayName("Item Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayName("Bid Time")
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Buyer1.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item.Name)
                </td>
                <td>
                    @String.Format("{0:C}", item.Price)
                </td>
                <td>
                    @if (item.TimeStamp.Date == DateTime.Now.Date)
                    {
                        @String.Format("{0:h:m:ss tt}", item.TimeStamp);
                    }
                    else
                    {
                        @String.Format("{0:M/d/yyyy}", item.TimeStamp);
                    }
                </td>

            </tr>
        }

    </table>
</div>

